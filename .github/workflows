name: My First Github Actions workflow
on:
  push:
    branches:
    - main
  pull_request:
    branches:
    - main
jobs:
  my-first-job:
    name: Ubuntu Runner
    runs-on: ubuntu-latest
    steps:
    - name: Checkout Repository
      uses: actions/checkout@v5
    - name: List Files
      run: ls -latrh
    - name: Display README
      run: cat README.md
